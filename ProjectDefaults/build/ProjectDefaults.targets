<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Target
      Name="ProjectDefaultsUpdateNuspec"
      BeforeTargets="GenerateNuspec"
    >
    <PropertyGroup>
      <PackageProjectUrl Condition="$(PackageProjectUrl) == ''">$(RepositoryUrl.Replace('.git', ''))</PackageProjectUrl>
      <RepositoryUrl Condition="$(RepositoryUrl) == ''">$(RepositoryUrl.Replace('.git', ''))</RepositoryUrl>
      <ReleaseNotes>$(PackageProjectUrl)/milestones?state=closed</ReleaseNotes>
      <PackageIconUrl>$(PackageProjectUrl.Replace('https://github.com', '%(SourceLinkGitHubHost.ContentUrl)'))/master/src/icon.png</PackageIconUrl>
    </PropertyGroup>
  </Target>
</Project>